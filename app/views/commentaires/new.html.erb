<div class="container">

  <h4 class="titre-page">Ajouter une note</h4>

  <%= simple_form_for [ @client, @commentaire ] do |f| %>
    <%= f.input :content, :placeholder => 'Notes sur le client', :label => false %>
    <%= f.submit "Valider", class: "btn btn-primary mb-1 btn-sm" %>
  <% end %>

    <div class="card-header mt-3 note">Notes</div>

     <div class="d-flex">

      <ul class="mt-3 col-sm-9">
        <% @client.commentaires.each do |commentaire| %>
          <li class="list-group-item"><%= commentaire.content %></li>
        <% end %>
      </ul>
    </div>
  </div>
      <%= link_to 'Retour', client_path(@client), class: "button-retour fixed-bottom ml-2" %>
</div>

