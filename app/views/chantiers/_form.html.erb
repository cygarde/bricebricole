<%= simple_form_for [ @chantier ]  do |f| %>
  <div class="form-show col-sm-9 mt-4 pt-4">
    <div class="row">
      <div class="col-sm-9 ">
        <%= f.input :reference, :placeholder => 'Reference', :label => false %>
        <%= f.input :client_id, collection: @clients, :label_method => :nom,:value_method => :id, :prompt => "Client", :label => false %>
        <%= f.input :nom, :placeholder => 'Nom', :label => false %>
        <%= f.input :description, :placeholder => 'Description', :label => false %>
        <%= f.input :statut, :collection => ['En cours', 'En attente'], :prompt => "Statut", :label => false %>
        <%= f.input :priorite, :placeholder => 'PrioritÃ©', :label => false %>
        <%= f.input :date_debut, as: :string, required: false, input_html: {class: "datepicker"}, placeholder:"Selectionnez vos dates" %>
        <%= f.input :date_fin_estimee, as: :string, required: false, input_html: {class: "datepicker"}%>
        <%= f.input :date_fin, as: :string, required: false, input_html: {class: "datepicker"} %>
        <%= f.input :adresse, :placeholder => 'Adresse', :label => false %>
        <%= f.input :montant_versement, :placeholder => 'Montant du versement', :label => false %>
        <%= f.input :avancement, :placeholder => 'Avancement', :label => false %>
        <div class="mt-2">
          <%= f.input :photos, as: :file, input_html: { multiple: true } %>
        </div>
        <%= f.submit "Valider", class: "btn btn-primary mb-1 btn-sm", style: "width: 100%"  %>
        <% end %>
      </div>
    </div>
  </div>






