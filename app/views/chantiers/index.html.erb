<div class="container">

  <div class="mt-2 titre-page">Chantiers</div>

<div><%= form_tag chantiers_path, method: :get do %>
  <%= select_tag "statut",
  options_for_select(@statut),
  include_blank: 'Statut'
  %>
  <%= submit_tag "Rechercher", class: "btn btn-primary mb-1 btn-sm" %>
  <% end %>

  <div class="row">
    <div class="col-sm-9">
      <div class="card">
        <div class="card-body">

          <% @chantiers.each do |chantier|  %>
            <div class="card-header d-flex justify-content-between">
              <div class="d-block">
                Nom du chantier: <%= chantier.nom %>
                Priorit√©: <%= chantier.priorite %>
                Avancement: <%= chantier.avancement %>
                Statut: <%= chantier.statut %>
              </div>
              <div class="d-flex">
                <%= link_to "Voir", chantier_path(chantier)  %>
                <%= link_to "Modifier", edit_chantier_path(chantier), class: "pl-2" %>
              </div>
            </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>

      <div>
    <%= link_to new_chantier_path do %>
      <button type="button" class="btn btn-primary mt-1 btn-sm">Nouveau chantier</button>
      <% end %>
    <%= link_to "Retour", root_path %>
  </div>
</div>




